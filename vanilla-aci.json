      "metadata": {
        "description": "Allow cheats in the server (true/false)"
      }
    },
    "version": {
      "type": "string",
      "defaultValue": "LATEST",
      "metadata": {
        "description": "Minecraft Bedrock version to run (LATEST, PREVIEW, or specific version)"
      }
    },
    "gamemode": {
      "type": "string",
