      ]
    },
    {
      "type": "Microsoft.ContainerInstance/containerGroups",
      "apiVersion": "2023-05-01",
      "name": "[parameters('serverName')]",
      "location": "[variables('location')]",
      "properties": {
        "containers": [
          {
            "name": "[parameters('serverName')]",
            "properties": {
              "image": "itzg/minecraft-bedrock-server",
              "environmentVariables": [
                {
                  "name": "EULA",
                  "value": "[if(equals(toLower(parameters('eula')), 'true'), 'TRUE', 'FALSE')]"
                },
                {
                  "name": "VERSION",
                  "value": "[parameters('version')]"
                },
                {
                  "name": "SERVER_NAME",
                  "value": "[parameters('serverName')]"
                },
                {
                  "name": "GAMEMODE",
                  "value": "[parameters('gamemode')]"
                },
                {
                  "name": "DIFFICULTY",
                  "value": "[parameters('difficulty')]"
                },
                {
                  "name": "ALLOW_CHEATS",
                  "value": "[toLower(parameters('allowCheats'))]"
                },
                {
                  "name": "MAX_PLAYERS",
                  "value": "[string(parameters('maxPlayers'))]"
                },
                {
                  "name": "ONLINE_MODE",
                  "value": "[toLower(parameters('onlineMode'))]"
                },
                {
                  "name": "ALLOW_LIST",
                  "value": "[toLower(parameters('allowList'))]"
                },
                {
                  "name": "ALLOW_LIST_USERS",
                  "value": "[parameters('allowListUsers')]"
                },
                {
                  "name": "OPS",
                  "value": "[parameters('ops')]"
                },
                {
                  "name": "MEMBERS",
                  "value": "[parameters('members')]"
                },
                {
                  "name": "VISITORS",
                  "value": "[parameters('visitors')]"
                },
                {
                  "name": "LEVEL_NAME",
                  "value": "[parameters('levelName')]"
                },
                {
                  "name": "LEVEL_SEED",
                  "value": "[parameters('levelSeed')]"
                },
                {
                  "name": "VIEW_DISTANCE",
                  "value": "[string(parameters('viewDistance'))]"
                },
                {
                  "name": "TICK_DISTANCE",
                  "value": "[string(parameters('tickDistance'))]"
                }
              ],
              "resources": {
                "requests": {
                  "cpu": "[parameters('numberCpuCores')]",
                  "memoryInGB": "[parameters('memory')]"
                }
              },
              "ports": [
                {
                  "port": 19132,
                  "protocol": "UDP"
                }
              ],
              "volumeMounts": [
                {
                  "name": "acishare",
                  "mountPath": "/data",
                  "readOnly": false
                }
              ]
            }
          }
        ],
        "osType": "Linux",
        "ipAddress": {
          "type": "Public",
          "ports": [
            {
              "protocol": "UDP",
              "port": 19132
            }
          ],
          "dnsNameLabel": "[parameters('serverName')]"
        },
        "restartPolicy": "Never",
        "volumes": [
          {
            "name": "acishare",
            "azureFile": {
              "readOnly": false,
              "shareName": "[variables('fileShareName')]",
              "storageAccountName": "[variables('storageAccountName')]",
              "storageAccountKey": "[listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName')), '2021-04-01').keys[0].value]"
            }
          }
        ]
      },
      "dependsOn": [
        "[resourceId('Microsoft.KeyVault/vaults/secrets', variables('keyVaultName'), 'allowCheats')]",
        "[resourceId('Microsoft.KeyVault/vaults/secrets', variables('keyVaultName'), 'allowList')]",
        "[resourceId('Microsoft.KeyVault/vaults/secrets', variables('keyVaultName'), 'allowListUsers')]",
        "[resourceId('Microsoft.KeyVault/vaults/secrets', variables('keyVaultName'), 'difficulty')]",
        "[resourceId('Microsoft.KeyVault/vaults/secrets', variables('keyVaultName'), 'eula')]",
        "[resourceId('Microsoft.KeyVault/vaults/secrets', variables('keyVaultName'), 'gamemode')]",
        "[resourceId('Microsoft.KeyVault/vaults/secrets', variables('keyVaultName'), 'levelName')]",
        "[resourceId('Microsoft.KeyVault/vaults/secrets', variables('keyVaultName'), 'levelSeed')]",
        "[resourceId('Microsoft.KeyVault/vaults/secrets', variables('keyVaultName'), 'maxPlayers')]",
        "[resourceId('Microsoft.KeyVault/vaults/secrets', variables('keyVaultName'), 'members')]",
        "[resourceId('Microsoft.KeyVault/vaults/secrets', variables('keyVaultName'), 'onlineMode')]",
        "[resourceId('Microsoft.KeyVault/vaults/secrets', variables('keyVaultName'), 'ops')]",
        "[resourceId('Microsoft.KeyVault/vaults/secrets', variables('keyVaultName'), 'storageAccountKey')]",
        "[resourceId('Microsoft.KeyVault/vaults/secrets', variables('keyVaultName'), 'tickDistance')]",
        "[resourceId('Microsoft.KeyVault/vaults/secrets', variables('keyVaultName'), 'version')]",
        "[resourceId('Microsoft.KeyVault/vaults/secrets', variables('keyVaultName'), 'viewDistance')]",
        "[resourceId('Microsoft.KeyVault/vaults/secrets', variables('keyVaultName'), 'visitors')]",
        "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName'))]",
        "[resourceId('Microsoft.Storage/storageAccounts/fileServices/shares', split(format('{0}/default/{1}', variables('storageAccountName'), variables('fileShareName')), '/')[0], split(format('{0}/default/{1}', variables('storageAccountName'), variables('fileShareName')), '/')[1], split(format('{0}/default/{1}', variables('storageAccountName'), variables('fileShareName')), '/')[2])]"
      ]
    }
  ],
  "outputs": {
    "keyVaultName": {
      "type": "string",
      "value": "[variables('keyVaultName')]"
    },
    "keyVaultId": {
      "type": "string",
      "value": "[resourceId('Microsoft.KeyVault/vaults', variables('keyVaultName'))]"
    },
    "containerGroupName": {
      "type": "string",
      "value": "[parameters('serverName')]"
    },
    "containerIPAddress": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.ContainerInstance/containerGroups', parameters('serverName')), '2023-05-01').ipAddress.ip]"
    },
    "containerFQDN": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.ContainerInstance/containerGroups', parameters('serverName')), '2023-05-01').ipAddress.fqdn]"
    }
  }
}