{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.39.26.7824",
      "templateHash": "6770589750861511606"
    }
  },
  "parameters": {
    "serverName": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Server Name. (will be used as the DNS Label and in-game server name)"
      }
    },
    "numberCpuCores": {
      "type": "int",
      "defaultValue": 2,
      "metadata": {
        "description": "CPUs for the server"
      }
    },
    "memory": {
      "type": "int",
      "defaultValue": 4,
      "metadata": {
        "description": "Memory available to the server in GB"
      }
    },
    "allowListUsers": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Whitelist of players - format: username1:XUID1,username2:XUID2"
      }
    },
    "ops": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "OPS - Operators XUIDs (use , to separate them)"
      }
    },
    "members": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "MEMBERS - Members XUIDs (use , to separate them)"
      }
    },
    "visitors": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "VISITORS - Visitors XUIDs (use , to separate them)"
      }
    },
    "eula": {
      "type": "bool",
      "metadata": {
        "description": "Accept Minecraft server EULA?"
      }
    },
    "maxPlayers": {
      "type": "int",
      "defaultValue": 10,
      "metadata": {
        "description": "Max number of players"
      }
    },
    "allowCheats": {
      "type": "bool",
      "defaultValue": false,
      "metadata": {
        "description": "Allow cheats in the server"
      }
    },
    "version": {
      "type": "string",
      "defaultValue": "LATEST",
      "metadata": {
        "description": "Minecraft Bedrock version to run (LATEST, PREVIEW, or specific version)"
      }
    },
    "gamemode": {
      "type": "string",
      "defaultValue": "survival",
      "metadata": {
        "description": "Game mode: survival, creative, adventure"
      }
    },
    "difficulty": {
      "type": "string",
      "defaultValue": "normal",
      "metadata": {
        "description": "Difficulty: peaceful, easy, normal, hard"
      }
    },
    "levelName": {
      "type": "string",
      "defaultValue": "Bedrock level",
      "metadata": {
        "description": "Level name (world name)"
      }
    },
    "levelSeed": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Level seed (leave empty for random)"
      }
    },
    "viewDistance": {
      "type": "int",
      "defaultValue": 10,
      "metadata": {
        "description": "View distance"
      }
    },
    "tickDistance": {
      "type": "int",
      "defaultValue": 4,
      "metadata": {
        "description": "Tick distance"
      }
    },
    "onlineMode": {
      "type": "bool",
      "defaultValue": true,
      "metadata": {
        "description": "Enable online mode (Xbox Live authentication)"
      }
    },
    "allowList": {
      "type": "bool",
      "defaultValue": false,
      "metadata": {
        "description": "Enable allow list (whitelist)"
      }
    }
  },
  "variables": {
    "fileShareName": "minecraftdata",
    "storageAccountType": "Standard_LRS",
    "location": "[resourceGroup().location]",
    "storageAccountName": "[format('{0}storage', parameters('serverName'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2021-04-01",
      "name": "[variables('storageAccountName')]",
      "location": "[variables('location')]",
      "sku": {
        "name": "[variables('storageAccountType')]"
      },
      "kind": "StorageV2"
    },
    {
      "type": "Microsoft.Storage/storageAccounts/fileServices/shares",
      "apiVersion": "2019-06-01",
      "name": "[format('{0}/default/{1}', variables('storageAccountName'), variables('fileShareName'))]",
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName'))]"
      ]
    },
    {
      "type": "Microsoft.ContainerInstance/containerGroups",
      "apiVersion": "2019-12-01",
      "name": "[parameters('serverName')]",
      "location": "[variables('location')]",
      "properties": {
        "containers": [
          {
            "name": "[parameters('serverName')]",
            "properties": {
              "image": "itzg/minecraft-bedrock-server",
              "environmentVariables": [
                {
                  "name": "EULA",
                  "value": "[if(parameters('eula'), 'TRUE', 'FALSE')]"
                },
                {
                  "name": "VERSION",
                  "value": "[parameters('version')]"
                },
                {
                  "name": "SERVER_NAME",
                  "value": "[parameters('serverName')]"
                },
                {
                  "name": "GAMEMODE",
                  "value": "[parameters('gamemode')]"
                },
                {
                  "name": "DIFFICULTY",
                  "value": "[parameters('difficulty')]"
                },
                {
                  "name": "ALLOW_CHEATS",
                  "value": "[format('{0}', parameters('allowCheats'))]"
                },
                {
                  "name": "MAX_PLAYERS",
                  "value": "[format('{0}', parameters('maxPlayers'))]"
                },
                {
                  "name": "ONLINE_MODE",
                  "value": "[format('{0}', parameters('onlineMode'))]"
                },
                {
                  "name": "ALLOW_LIST",
                  "value": "[format('{0}', parameters('allowList'))]"
                },
                {
                  "name": "ALLOW_LIST_USERS",
                  "value": "[parameters('allowListUsers')]"
                },
                {
                  "name": "OPS",
                  "value": "[parameters('ops')]"
                },
                {
                  "name": "MEMBERS",
                  "value": "[parameters('members')]"
                },
                {
                  "name": "VISITORS",
                  "value": "[parameters('visitors')]"
                },
                {
                  "name": "LEVEL_NAME",
                  "value": "[parameters('levelName')]"
                },
                {
                  "name": "LEVEL_SEED",
                  "value": "[parameters('levelSeed')]"
                },
                {
                  "name": "VIEW_DISTANCE",
                  "value": "[format('{0}', parameters('viewDistance'))]"
                },
                {
                  "name": "TICK_DISTANCE",
                  "value": "[format('{0}', parameters('tickDistance'))]"
                }
              ],
              "resources": {
                "requests": {
                  "cpu": "[parameters('numberCpuCores')]",
                  "memoryInGB": "[parameters('memory')]"
                }
              },
              "ports": [
                {
                  "port": 19132,
                  "protocol": "UDP"
                }
              ],
              "volumeMounts": [
                {
                  "name": "acishare",
                  "mountPath": "/data",
                  "readOnly": false
                }
              ]
            }
          }
        ],
        "osType": "Linux",
        "ipAddress": {
          "type": "Public",
          "ports": [
            {
              "protocol": "UDP",
              "port": 19132
            }
          ],
          "dnsNameLabel": "[parameters('serverName')]"
        },
        "restartPolicy": "Never",
        "volumes": [
          {
            "name": "acishare",
            "azureFile": {
              "readOnly": false,
              "shareName": "[variables('fileShareName')]",
              "storageAccountName": "[variables('storageAccountName')]",
              "storageAccountKey": "[listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName')), '2021-04-01').keys[0].value]"
            }
          }
        ]
      },
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName'))]",
        "[resourceId('Microsoft.Storage/storageAccounts/fileServices/shares', split(format('{0}/default/{1}', variables('storageAccountName'), variables('fileShareName')), '/')[0], split(format('{0}/default/{1}', variables('storageAccountName'), variables('fileShareName')), '/')[1], split(format('{0}/default/{1}', variables('storageAccountName'), variables('fileShareName')), '/')[2])]"
      ]
    }
  ]
}